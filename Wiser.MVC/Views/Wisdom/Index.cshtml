@model IEnumerable<Wiser.Models.Wisdom.WisdomScrollItem>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    @:<h3 style="text-align: center;">Welcome back, <span class="usernameText"> @TempData["Owner"]</span></h3>
}
<p class="text-align: center;">
    @Html.ActionLink("Create New", "Create")
</p>
@Html.Partial("ScrollItem")
@section scripts {
    <script language="javascript" type="text/javascript">
        console.log("Yup it's checked");
        $(document).ready(function () {
            $(".upvote").click(function (e) {
                var target = $(e.target);
                var id = target.attr('id');
                $.ajax({
                    type: 'PUT',
                    url: `/api/upvote/${id}`
                })
                    .done(function (r) {
                        if (r == false) {
                            setTimeout(function () {
                                var alertTarget = $('#alertTarget');
                            }, 5000)
                        }
                        else {
                            alert('${r} naniwa!');
                            target.removeClass();
                            target.addClass("fa");
                            target.addClass("fa-thumbs-up")
                            target.hide();
                        }
                    })
                    .fail(function (r) {
                        alert("Failed to upvote post");
                    });
            });
            $(".favoriteButton").click(function (e) {
                var target = $(e.target);
                var id = target.attr('id');
                console.log(id);
                $.ajax({
                    type: 'POST',
                    url: `/api/favorite/${id}`
                })
                    .done(function (r) {
                        console.log(r);
                        if (r == false) {
                            $.ajax({
                                type: 'DELETE',
                                url: `/api/rmfavorite/${id}`
                            })
                                .done(function (r) {
                                    if (r == true) {
                                        target.removeClass();
                                        target.addClass("fa");
                                        target.addClass("fa-heart-o");
                                        console.log("Remove success");
                                    }
                                    else {
                                        console.log("Remove failed");
                                    }
                                })
                                .fail(function (r) {
                                    console.log("shit");
                                })
                        }
                        else {
                            target.removeClass();
                            target.addClass("fa");
                            target.addClass("fa-heart");
                            console.log(r);
                        }
                    })
                    .fail(function (r) {
                        alert("Failed to favorite post");
                    });
            });
        });
    </script>

}