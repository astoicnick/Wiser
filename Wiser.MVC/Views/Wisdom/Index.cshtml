@model IEnumerable<Wiser.Models.Wisdom.WisdomScrollItem>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    var firstName = "";
    foreach (var letter in TempData["Owner"].ToString())
    {
        if (letter.ToString() == " ")
        {
            break;
        }
        else
        {
            firstName += letter;
        }
    }
    @:<h3 style="text-align: center;">Welcome back, <span class="usernameText">@firstName</span></h3>
}
<h3 class="create">
    @Html.ActionLink("create", "Create")
</h3>
@Html.Partial("ScrollItem")
<style>
    .create {
        text-align: center;
        font-family: Augustus;
        margin: 0 auto;
    }
</style>
<style>
    .usernameText {
        font-weight: bold;
    }
</style>
@section scripts {
}