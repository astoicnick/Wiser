@model IEnumerable<Wiser.Models.Wisdom.WisdomScrollItem>
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Index";
}
@if (User.Identity.IsAuthenticated)
{
    var firstName = "";
    foreach (var letter in TempData["Owner"].ToString())
    {
        if (letter.ToString() == " ")
        {
            break;
        }
        else
        {
            firstName += letter;
        }
    }
    @:<h3 class="welcomeText" style="text-align: center;">Welcome back, <span class="usernameText">@firstName</span></h3>
}
@Html.Partial("ScrollItem")
<style>
    .create {
        text-align: center;
        font-family: Augustus;
        margin: 0 auto;
    }
</style>
<style>
    .usernameText {
        font-weight: bold;
    }
</style>
@section scripts {
    <script>
        $(document).ready(function (a) {
            $("body").hide(0).delay(50).fadeIn(1500);
        });
    </script>
}