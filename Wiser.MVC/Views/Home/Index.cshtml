@model Wiser.Models.Wisdom.WisdomScrollItem
@{
    ViewBag.Title = "Home Page";
}
<div class="masthead">
    <h1 class="display-2 mastText">Wiser</h1>
    <h2 class="mastText">The book buddy you never knew you needed</h2>
    <br />
    <a class="btn btn-outline-primary" href="@Url.Action("Login","Account")">Login / Register</a>
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <i class="fa fa-thumbs-up fa-5x"></i>
                    <div class="card-body">
                        <h5>Upvote</h5>
                        <p class="card-text">
                            Upvote posts to promote wisdom that you appreciate
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <i class="fa fa-heart fa-5x"></i>
                    <div class="card-body">
                        <h5>Favorites</h5>
                        <p class="card-text">
                            Favorite posts to save them to your private collection of wisdom that you can look upon later
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <i class="fa fa-user fa-5x"></i>
                    <div class="card-body">
                        <h5>Users</h5>
                        <p class="card-text">
                            Like a consistent type of quote? Odds are there are other people who like the same wisdom as you. Click on the user icon for a post to check out other wisdom by that user
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
    <div class="container howContainer">
        <div class="row">
            <div class="col-12">
                <h3 style="text-align: center; padding-top: 10px;">What your wisdom looks like</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="container scrollContainer">
                    <div class="row contentrow">
                        <div class=" col-12 content">
                            <h3 class="display-7 contentText">
                                Today is victory over yourself of yesterday, tomorrow is your victory over lesser men.
                            </h3>
                        </div>
                    </div>
                    <div class="row bottomRow">
                        <div class="col-4">
                            <div class="icons">
                                <a href='#' class="fa fa-user scrollIcon" title="Check out the User behind this!"></a>
                                &nbsp;
                                &nbsp;
                                <i class="fa fa-thumbs-o-up scrollIcon" aria-hidden="true" title="Upvote this wisdom!"></i>
                                &nbsp;
                                &nbsp;
                                <i class="fa fa-star-o scrollIcon" title="Favorite this wisdom!"></i>
                            </div>
                        </div>
                        <div class=" col-8 author">
                            <p class="sourceText">
                                A Book Of Five Rings
                            </p>
                            @Html.ActionLink("Miyamoto Mushashi", null, null, null, new { @class = "authorText" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
            <h4 style="border: 1px solid dodgerblue; border-radius: 10px; padding: 5px 7px 5px 7px; box-shadow: lightgrey 5px 5px 5px; background-color: #FFF2CC;">This is an example of a quote that was taken from a book one of our users was reading. Using Wiser, you can easily keep all of the quotes you find while reading in an easy to read, convenient format.</h4>
            <hr />
        </div>
            </div>
    </div>
    <div id="info" class="row howContainer">
        <div class="col-md-4">
            <h2>Getting started</h2>
            <p>
                ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                enables a clean separation of concerns and gives you full control over markup
                for enjoyable, agile development.
            </p>
        </div>
        <div class="col-md-4">
            <h2>Get more libraries</h2>
            <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        </div>
        <div class="col-md-4">
            <h2>Web Hosting</h2>
            <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        </div>
    </div>
<style>
    html {
        scroll-behavior: smooth;
    }

    body {
        padding: 0px;
        margin: 0 auto;
    }
    .masthead {
        margin: 0 auto;
        padding: 0px;
        height: 100%;
        width: 98vw;
        background-color: white;
        padding-bottom: 4.5em;
    }
    .mastText {
        color: dodgerblue;
    }
    .card{
        height: 100%;
        color: dodgerblue;
    }
    .card-body{
        color: black;
    }
</style>