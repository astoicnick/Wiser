@model Wiser.Models.Author.AuthorDetailItem

@*@foreach (var w in Model)
{*@

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#@Model.FirstName">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="@Model.FirstName" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="@Model.AuthorId" class="container-fluid scrollContainer">
                    <div class="row topRow">
                        <div class="col-1 user">
                            <a href='@Url.Action($"Details/{Model.AuthorId}","Author")' class="fa fa-user scrollIcon"></a>
                        </div>
                    </div>
                    <div class="row contentrow">
                        <div class=" col-12 content">
                            <h3 class="display-7 contentText">
                                @Model.FirstName @Model.LastName
                            </h3>
                        </div>
                    </div>
                    <div class="row bottomRow">
                        <div class="col-5 bottomColumns">
                            Virtue - @Model.Virtue
                        </div>
                        <div class="col-7 bottomColumns">
                            Wisdom Count - @Model.WisdomCount
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>